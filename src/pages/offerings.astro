---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import Card from '../components/Card.astro';
import { Icon } from 'astro-icon/components';
---

<Layout title="Offerings - Chaya Adamson">
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="hero-floating-element hero-floating-element--top-right"></div>
    <div class="hero-floating-element hero-floating-element--bottom-left"></div>

    <div class="hero-content">
      <div style="max-width: 80rem; margin: 0 auto;">
        <h1 class="hero-title">Offerings</h1>
        <p class="hero-subtitle">Pathways to remembering who you truly are</p>
        <div class="hero-divider"></div>
      </div>
    </div>
  </section>

  <!-- Main Offerings -->
  <section class="content-section content-section--light">
    <div class="section-floating-element section-floating-element--top-left">
    </div>

    <div class="section-content">
      <div class="section-header">
        <h2 class="section-title">Ways We Can Work Together</h2>
        <p class="section-subtitle">
          Each offering is designed to meet you exactly where you are on your
          journey of remembering.
        </p>
      </div>

      <div
        class="grid grid--two-cols grid--large-gap"
        style="margin-bottom: 5rem;"
      >
        <!-- 1:1 Coaching -->
        <Card>
          <div class="offering-header">
            <div class="offering-icon-bg">
              <svg
                class="offering-icon"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                ></path>
              </svg>
            </div>
            <div class="offering-info">
              <h3 class="offering-title">1:1 Coaching</h3>
              <p class="offering-subtitle">
                Private container for transformation
              </p>
            </div>
          </div>

          <div class="card-divider"></div>

          <p class="card-description">
            A private container for clarity, intuitive guidance and soulful
            embodiment.
          </p>

          <Button href="/contact" variant="primary" size="large" fullWidth>
            Learn More
          </Button>
        </Card>

        <!-- Integration -->
        <Card>
          <div class="offering-header">
            <div class="offering-icon-bg">
              <svg
                class="offering-icon"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
                ></path>
              </svg>
            </div>
            <div class="offering-info">
              <h3 class="offering-title">Integration</h3>
              <p class="offering-subtitle">
                Bridge experiences into embodiment
              </p>
            </div>
          </div>

          <div class="card-divider"></div>

          <p class="card-description">
            Pre- and post journey work to prepare and land back to yourself with
            gentleness and ease. Bridge deep experiences into grounded
            embodiment. Turn insight into aligned, lasting change.
          </p>

          <Button href="/contact" variant="primary" size="large" fullWidth>
            Learn More
          </Button>
        </Card>
      </div>

      <div
        class="grid grid--two-cols grid--large-gap"
        style="margin-bottom: 5rem;"
      >
        <!-- IFS Coaching -->
        <Card>
          <div class="offering-header">
            <div class="offering-icon-bg">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                ><path
                  fill="currentColor"
                  d="M13.07 10.41a5 5 0 0 0 0-5.82A3.4 3.4 0 0 1 15 4a3.5 3.5 0 0 1 0 7a3.4 3.4 0 0 1-1.93-.59M5.5 7.5A3.5 3.5 0 1 1 9 11a3.5 3.5 0 0 1-3.5-3.5m2 0A1.5 1.5 0 1 0 9 6a1.5 1.5 0 0 0-1.5 1.5M16 17v2H2v-2s0-4 7-4s7 4 7 4m-2 0c-.14-.78-1.33-2-5-2s-4.93 1.31-5 2m11.95-4A5.32 5.32 0 0 1 18 17v2h4v-2s0-3.63-6.06-4Z"
                ></path></svg
              >
            </div>
            <div class="offering-info">
              <h3 class="offering-title">IFS Coaching</h3>
              <p class="offering-subtitle">Internal Family Systems approach</p>
            </div>
          </div>

          <div class="card-divider"></div>

          <p class="card-description">
            Rooted in Internal Family Systems. Meet, hear, and heal the parts
            within, so you can live as your whole self.
          </p>

          <Button href="/contact" variant="primary" size="large" fullWidth>
            Learn More
          </Button>
        </Card>

        <!-- 1:1 Journey -->
        <Card>
          <div class="offering-header">
            <div class="offering-icon-bg">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                ><path
                  fill="currentColor"
                  d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.62L12 2L9.19 8.62L2 9.24l5.45 4.73L5.82 21z"
                ></path></svg
              >
            </div>
            <div class="offering-info">
              <h3 class="offering-title">1:1 Journey</h3>
              <p class="offering-subtitle">Full day of deep healing</p>
            </div>
          </div>

          <div class="card-divider"></div>

          <p class="card-description">
            Drop into a full day of healing. Embark on the journey of your
            lifetime.
          </p>

          <Button href="/contact" variant="primary" size="large" fullWidth>
            Learn More
          </Button>
        </Card>
      </div>

      <!-- Call to Action Card -->
      <div style="max-width: 64rem; margin: 0 auto;">
        <Card variant="dark">
          <div class="single-session-card">
            <div class="session-icon-container">
              <div class="session-icon-bg">
                <svg
                  class="session-icon"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
                  ></path>
                </svg>
              </div>
            </div>

            <div class="session-details">
              <h3 class="session-title">Ready to Begin?</h3>
              <p class="session-description">
                Let's explore which path feels most aligned for you. Book a free
                exploration call to discover how we can work together.
              </p>
            </div>

            <div class="session-features">
              <div class="session-feature">
                <svg
                  class="feature-icon"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <p class="feature-text">20 Minutes</p>
              </div>
              <div class="session-feature">
                <svg
                  class="feature-icon"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                  ></path>
                </svg>
                <p class="feature-text">Heart-Centered</p>
              </div>
              <div class="session-feature">
                <svg
                  class="feature-icon"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707"
                  ></path>
                </svg>
                <p class="feature-text">Completely Free</p>
              </div>
            </div>

            <Button href="/contact" variant="secondary" size="large">
              Book Free Exploration
            </Button>
          </div>
        </Card>
      </div>
    </div>
  </section>

  <section
    class="content-section content-section--light testimonials-section"
    style="padding-top: 0; padding-bottom: 50px;"
  >
    <div class="section-floating-element section-floating-element--center">
    </div>
    <div class="section-content">
      <div class="testimonials-container">
        <div class="testimonials-carousel" id="testimonials-carousel">
          <!-- Testimonial 1 -->
          <div class="testimonial-slide active">
            <div class="testimonial-content">
              <p class="testimonial-text">
                Chaya's presence alone activated a shift in how I show up. I
                trust myself now.
              </p>
            </div>
          </div>

          <!-- Testimonial 2 -->
          <div class="testimonial-slide">
            <div class="testimonial-content">
              <p class="testimonial-text">Not coaching. Life Transformation.</p>
            </div>
          </div>

          <!-- Testimonial 3 -->
          <div class="testimonial-slide">
            <div class="testimonial-content">
              <p class="testimonial-text">
                A space to feel. The time I spent with Chaya changed the
                trajectory of my life.
              </p>
            </div>
          </div>

          <!-- Testimonial 4 -->
          <div class="testimonial-slide">
            <div class="testimonial-content">
              <p class="testimonial-text">
                Working with Chaya has brought me back home to myself. Thank you
                for reminding me who I am.
              </p>
            </div>
          </div>

          <!-- Testimonial 5 -->
          <div class="testimonial-slide">
            <div class="testimonial-content">
              <p class="testimonial-text">
                Your perspective just shifted something in me. It shifted me
                back to my knowing.
              </p>
            </div>
          </div>

          <!-- Testimonial 6 -->
          <div class="testimonial-slide">
            <div class="testimonial-content">
              <p class="testimonial-text">
                Thank you for giving me the space to feel.
              </p>
            </div>
          </div>

          <!-- Testimonial 7 -->
          <div class="testimonial-slide">
            <div class="testimonial-content">
              <p class="testimonial-text">
                Thank you for witnessing me in my pain and my grief.
              </p>
            </div>
          </div>

          <!-- Testimonial 8 -->
          <div class="testimonial-slide">
            <div class="testimonial-content">
              <p class="testimonial-text">
                Thank you for giving words to my experience that I couldn't find
                on my own.
              </p>
            </div>
          </div>

          <!-- Testimonial 9 -->
          <div class="testimonial-slide">
            <div class="testimonial-content">
              <p class="testimonial-text">
                This is not therapy, it's a beautiful accompaniment to my weekly
                therapy that propels me forward between sessions.
              </p>
            </div>
          </div>
        </div>

        <!-- Navigation Arrows -->
        <button
          class="testimonial-nav testimonial-nav--prev"
          id="prev-testimonial"
          aria-label="Previous testimonial"
        >
          <svg
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M15 18L9 12L15 6"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
        </button>

        <button
          class="testimonial-nav testimonial-nav--next"
          id="next-testimonial"
          aria-label="Next testimonial"
        >
          <svg
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M9 18L15 12L9 6"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
        </button>

        <!-- Dots Navigation -->
        <div class="testimonials-dots" id="testimonials-dots">
          <button
            class="testimonial-dot active"
            data-slide="0"
            aria-label="Go to testimonial 1"></button>
          <button
            class="testimonial-dot"
            data-slide="1"
            aria-label="Go to testimonial 2"></button>
          <button
            class="testimonial-dot"
            data-slide="2"
            aria-label="Go to testimonial 3"></button>
          <button
            class="testimonial-dot"
            data-slide="3"
            aria-label="Go to testimonial 4"></button>
          <button
            class="testimonial-dot"
            data-slide="4"
            aria-label="Go to testimonial 5"></button>
          <button
            class="testimonial-dot"
            data-slide="5"
            aria-label="Go to testimonial 6"></button>
          <button
            class="testimonial-dot"
            data-slide="6"
            aria-label="Go to testimonial 7"></button>
          <button
            class="testimonial-dot"
            data-slide="7"
            aria-label="Go to testimonial 8"></button>
          <button
            class="testimonial-dot"
            data-slide="8"
            aria-label="Go to testimonial 9"></button>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="content-section content-section--dark">
    <div
      class="section-floating-element section-floating-element--bottom-right"
    >
    </div>

    <div
      class="container"
      style="max-width: 96rem; margin: 0 auto; text-align: center;"
    >
      <div style="margin-bottom: 3rem;">
        <h2 class="section-title">How We Begin</h2>
        <p
          style="font-size: 1.5rem; font-weight: 300; opacity: 0.9; max-width: 48rem; margin: 0 auto; line-height: 1.4;"
        >
          Every journey starts with a conversation about what's calling you
          forward.
        </p>
      </div>

      <div class="process-steps">
        <div class="process-step">
          <div class="step-number">1</div>
          <h3 class="step-title">Free Exploration</h3>
          <p class="step-description">
            A 20-minute conversation to explore what's possible and see if we're
            aligned.
          </p>
        </div>

        <div class="process-step">
          <div class="step-number">2</div>
          <h3 class="step-title">Sacred Container</h3>
          <p class="step-description">
            We create a safe space for your deepest truth to emerge and be
            witnessed.
          </p>
        </div>

        <div class="process-step">
          <div class="step-number">3</div>
          <h3 class="step-title">Embodied Living</h3>
          <p class="step-description">
            You step into alignment with who you truly are and live from that
            knowing.
          </p>
        </div>
      </div>

      <div style="padding-top: 4rem;">
        <Button variant="accent" size="large" href="/contact">
          Begin Your Journey
        </Button>
      </div>
    </div>
  </section>
</Layout>

<script>
  // Testimonials Carousel Functionality
  document.addEventListener('DOMContentLoaded', function () {
    const carousel = document.getElementById('testimonials-carousel');
    const slides = carousel.querySelectorAll('.testimonial-slide');
    const dots = document.querySelectorAll('.testimonial-dot');
    const prevBtn = document.getElementById('prev-testimonial');
    const nextBtn = document.getElementById('next-testimonial');

    let currentSlide = 0;
    let autoRotate;
    const totalSlides = slides.length;

    function showSlide(index) {
      // Remove active class from all slides and dots
      slides.forEach((slide) => slide.classList.remove('active'));
      dots.forEach((dot) => dot.classList.remove('active'));

      // Add active class to current slide and dot
      slides[index].classList.add('active');
      dots[index].classList.add('active');

      currentSlide = index;
    }

    function nextSlide() {
      const next = (currentSlide + 1) % totalSlides;
      showSlide(next);
    }

    function prevSlide() {
      const prev = (currentSlide - 1 + totalSlides) % totalSlides;
      showSlide(prev);
    }

    function startAutoRotate() {
      autoRotate = setInterval(nextSlide, 5000); // Change every 5 seconds
    }

    function stopAutoRotate() {
      clearInterval(autoRotate);
    }

    // Event listeners
    nextBtn.addEventListener('click', () => {
      nextSlide();
      stopAutoRotate();
      startAutoRotate(); // Restart auto-rotation
    });

    prevBtn.addEventListener('click', () => {
      prevSlide();
      stopAutoRotate();
      startAutoRotate(); // Restart auto-rotation
    });

    // Dot navigation
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        showSlide(index);
        stopAutoRotate();
        startAutoRotate(); // Restart auto-rotation
      });
    });

    // Start auto-rotation
    startAutoRotate();

    // Pause auto-rotation on hover
    carousel.addEventListener('mouseenter', stopAutoRotate);
    carousel.addEventListener('mouseleave', startAutoRotate);

    // Handle visibility change to pause when tab is not active
    document.addEventListener('visibilitychange', () => {
      if (document.hidden) {
        stopAutoRotate();
      } else {
        startAutoRotate();
      }
    });
  });
</script>
