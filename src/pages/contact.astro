---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import Card from '../components/Card.astro';
---

<Layout title="Contact - Chaya Adamson">
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="hero-floating-element hero-floating-element--top-right"></div>
    <div class="hero-floating-element hero-floating-element--bottom-left"></div>

    <div class="hero-content">
      <div style="max-width: 64rem; margin: 0 auto;">
        <h1 class="hero-title">Let's Connect</h1>
        <p class="hero-subtitle">
          Ready to begin your journey of remembering who you truly are?
        </p>
        <div class="hero-divider"></div>
      </div>
    </div>
  </section>

  <!-- Contact Form & Info Section -->
  <section class="content-section content-section--light">
    <div class="section-floating-element section-floating-element--center">
    </div>

    <div class="section-content">
      <div class="grid grid--two-cols grid--large-gap">
        <!-- Contact Form -->
        <div>
          <div style="margin-bottom: 2rem;">
            <h2
              style="font-size: 2.5rem; font-weight: 200; letter-spacing: 0.05em; margin-bottom: 1.5rem;"
            >
              Send a Message
            </h2>
            <p
              style="font-size: 1.25rem; font-weight: 300; line-height: 1.4; opacity: 0.8;"
            >
              Share what's calling you forward. I'll respond within 24 hours.
            </p>
          </div>

          <Card>
            <form>
              <div class="form-row">
                <div class="form-group">
                  <label for="firstName" class="form-label">First Name</label>
                  <input
                    id="firstName"
                    class="form-input"
                    placeholder="Your first name"
                  />
                </div>
                <div class="form-group">
                  <label for="lastName" class="form-label">Last Name</label>
                  <input
                    id="lastName"
                    class="form-input"
                    placeholder="Your last name"
                  />
                </div>
              </div>

              <div class="form-group">
                <label for="email" class="form-label">Email Address</label>
                <input
                  id="email"
                  type="email"
                  class="form-input"
                  placeholder="your@email.com"
                />
              </div>

              <div class="form-group">
                <label for="subject" class="form-label"
                  >What's calling you?</label
                >
                <input
                  id="subject"
                  class="form-input"
                  placeholder="Subject of your message"
                />
              </div>

              <div class="form-group">
                <label for="message" class="form-label">Your Message</label>
                <textarea
                  id="message"
                  rows="6"
                  class="form-textarea"
                  placeholder="Share what's on your heart..."></textarea>
              </div>

              <Button variant="primary" size="large" fullWidth type="submit">
                Send Message
              </Button>
            </form>
          </Card>
        </div>

        <!-- Contact Information -->
        <div>
          <div style="margin-bottom: 3rem;">
            <h2
              style="font-size: 2.5rem; font-weight: 200; letter-spacing: 0.05em; margin-bottom: 1.5rem;"
            >
              Get in Touch
            </h2>
            <p
              style="font-size: 1.25rem; font-weight: 300; line-height: 1.4; opacity: 0.8;"
            >
              Multiple ways to connect and begin this sacred conversation.
            </p>
          </div>

          <div
            style="display: flex; flex-direction: column; gap: 2rem; margin-bottom: 2rem;"
          >
            <Card>
              <div style="display: flex; align-items: flex-start; gap: 1.5rem;">
                <div class="card-icon">
                  <svg
                    class="icon"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h3 class="card-title">Email</h3>
                  <p
                    style="font-size: 1.125rem; opacity: 0.7; margin-bottom: 0.5rem;"
                  >
                    hello@chayaadamson.com
                  </p>
                  <p
                    style="font-size: 0.875rem; opacity: 0.6; font-weight: 300;"
                  >
                    I respond within 24 hours
                  </p>
                </div>
              </div>
            </Card>

            <Card>
              <div style="display: flex; align-items: flex-start; gap: 1.5rem;">
                <div class="card-icon">
                  <svg
                    class="icon"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h3 class="card-title">Free Exploration</h3>
                  <p
                    style="font-size: 1.125rem; opacity: 0.7; margin-bottom: 0.5rem;"
                  >
                    Schedule a free 20-minute call
                  </p>
                  <p
                    style="font-size: 0.875rem; opacity: 0.6; font-weight: 300;"
                  >
                    Let's explore if we're aligned
                  </p>
                </div>
              </div>
            </Card>

            <Card>
              <div style="display: flex; align-items: flex-start; gap: 1.5rem;">
                <div class="card-icon">
                  <svg
                    class="icon"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="card-title">Response Time</h3>
                  <p
                    style="font-size: 1.125rem; opacity: 0.7; margin-bottom: 0.5rem;"
                  >
                    Within 24 hours
                  </p>
                  <p
                    style="font-size: 0.875rem; opacity: 0.6; font-weight: 300;"
                  >
                    Usually much sooner
                  </p>
                </div>
              </div>
            </Card>
          </div>

          <Card variant="dark">
            <div style="text-align: center;">
              <h3
                style="font-size: 1.5rem; font-weight: 300; margin-bottom: 1rem; letter-spacing: 0.05em;"
              >
                Ready for Your Free Exploration?
              </h3>
              <p
                style="font-size: 1.125rem; opacity: 0.9; margin-bottom: 1.5rem; font-weight: 300;"
              >
                Let's explore what's possible. No pressure, no expectations.
                Book a complementary call to feel into what path is most aligned
                for you. Whether you're ready to start or just want to connect,
                I welcome you.
              </p>
              <div style="margin-bottom: 1.5rem;">
                <div
                  style="display: flex; justify-content: center; gap: 2rem; margin-bottom: 1rem; flex-wrap: wrap;"
                >
                  <div style="display: flex; align-items: center; gap: 0.5rem;">
                    <svg
                      style="width: 1.25rem; height: 1.25rem; opacity: 0.7;"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span style="font-size: 0.875rem; opacity: 0.7;"
                      >20 minutes</span
                    >
                  </div>
                  <div style="display: flex; align-items: center; gap: 0.5rem;">
                    <svg
                      style="width: 1.25rem; height: 1.25rem; opacity: 0.7;"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                      ></path>
                    </svg>
                    <span style="font-size: 0.875rem; opacity: 0.7;"
                      >Heart centered</span
                    >
                  </div>
                  <div style="display: flex; align-items: center; gap: 0.5rem;">
                    <svg
                      style="width: 1.25rem; height: 1.25rem; opacity: 0.7;"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707"
                      ></path>
                    </svg>
                    <span style="font-size: 0.875rem; opacity: 0.7;"
                      >Complementary</span
                    >
                  </div>
                </div>
              </div>
              <Button variant="secondary" size="large">
                Book Free Exploration
              </Button>
            </div>
          </Card>
        </div>
      </div>
    </div>
  </section>
</Layout>
